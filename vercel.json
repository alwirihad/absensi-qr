{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php",
      "config": {
        "buildCommand": "composer install"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  }
}
